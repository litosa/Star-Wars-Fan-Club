@using Microsoft.AspNet.Identity
@{
    var shoppinglistCount = Session["shoppinglistCount"];
}
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Meny <span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li><a href="/CallesChat/Index">CallesChat</a></li>
                    <li><a href="/Wall/Index">Wall</a></li>
                    <li><a href="/Quiz/Index">Quiz</a></li>
                    <li><a href="/Dice/Index">Spel</a></li>
                    <li><a href="/ChatRoom/Index">ChatRoom</a></li>
                    <li><a href="/Order/Index">Mina Ordrar</a></li>
                    <li><a href="/Store/Index">Butik</a></li>
                </ul>            
            <li>
                <a href="/ShoppingCart/Index">Varukorg <span class="badge">@shoppinglistCount</span></a>
            <li>
            <li>
                <a href="javascript:document.getElementById('logoutForm').submit()">Logga Ut</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrera", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Logga In", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
